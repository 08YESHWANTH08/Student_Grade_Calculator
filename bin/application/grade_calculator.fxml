<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="GradeCalculatorController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Enter number of subjects:" GridPane.columnSpan="2"/>
    <TextField fx:id="numberOfSubjectsField" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
    <GridPane fx:id="marksGrid" GridPane.rowIndex="2" GridPane.columnSpan="2" vgap="5"/>
    <Button text="Calculate" fx:id="calculateButton" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    <TextArea fx:id="resultArea" editable="false" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
</GridPane>
